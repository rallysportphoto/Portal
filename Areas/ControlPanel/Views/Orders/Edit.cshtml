                    @Html.LabelFor(model => model.Engine, new { @class = "control-label col-md-2" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Engine)
                        @Html.ValidationMessageFor(model => model.Engine)
                    </div>
                </div>
            </div>
        </div>
         <div class="form-actions">
            <button type="reset" class="btn btn-danger"><i class="icon-repeat"></i> Сбросить на начальные</button>
            <button type="submit" class="btn btn-success"><i class="icon-ok"></i> Изменить</button>
        </div>

    </div>
}
                    </div>
                    <!-- END Horizontal Form Content -->
                </div>
                <!-- END Horizontal Form Block -->
</div>
