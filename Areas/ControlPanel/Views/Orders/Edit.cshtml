                    </div>                                      

                    <div class="control-group">
                        @Html.LabelFor(model => model.EntrantPhone, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.EntrantPhone)
                            @Html.ValidationMessageFor(model => model.EntrantPhone)
                        </div>
                    </div>
                </div>
                
            </div>
        </div>

        <div class="block block-themed themed-default">
            <div class="block-title"><h4>Автомобиль</h4></div>            
            <div class="block-content full">
                @Html.HiddenFor(model => model.CarId)
                <div class="control-group">
                    @Html.LabelFor(model => model.Mark, new { @class = "control-label col-md-2" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Mark)
                        @Html.ValidationMessageFor(model => model.Mark)
                    </div>
                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.Model, new { @class = "control-label col-md-2" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Model)
