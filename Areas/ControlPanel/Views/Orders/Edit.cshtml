                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.EntrantASN, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.EntrantASN)
                            @Html.ValidationMessageFor(model => model.EntrantASN)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.EntrantCity, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.EntrantCity)
                            @Html.ValidationMessageFor(model => model.EntrantCity)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.EntrantAddress, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.EntrantAddress)
                            @Html.ValidationMessageFor(model => model.EntrantAddress)
                        </div>
                    </div>
                                        
                    <div class="control-group">
                        @Html.LabelFor(model => model.EntrantEmail, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.EntrantEmail)
                            @Html.ValidationMessageFor(model => model.EntrantEmail)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.EntrantFax, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.EntrantFax)
                            @Html.ValidationMessageFor(model => model.EntrantFax)
