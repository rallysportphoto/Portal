@model Portal.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ControlPanel/Views/Shared/_Admin.cshtml";
}

<!-- Pre Page Content -->
            <div id="pre-page-content">
                <h1><i class="glyphicon-show_thumbnails_with_lines themed-color"></i> Новости<br><small>Создание новости</small></h1>
            </div>
            <!-- END Pre Page Content -->

            <!-- Page Content -->
            <div id="page-content">
                <!-- Breadcrumb -->
                <ul class="breadcrumb breadcrumb-top">
                    <li>
                        <a href="/"><i class="glyphicon-display"></i></a> <span class="divider"><i class="icon-angle-right"></i></span>
                    </li>
                    <li>
                        <a href="/controlpanel">Панель управления</a> <span class="divider"><i class="icon-angle-right"></i></span>
                    </li>
                    <li>
                        <a href="/controlpanel/news">Новости</a> <span class="divider"><i class="icon-angle-right"></i></span>
                    </li>
                    <li><a href="">Создание новости</a></li>
                </ul>
                <!-- END Breadcrumb -->

                <!-- Horizontal Form Block -->
                <div class="block block-themed">
                    <!-- Horizontal Form Title -->
                    <div class="block-title">
                        <h4></h4>
                    </div>
                    <!-- END Horizontal Form Title -->

                    <!-- Horizontal Form Content -->
                    <div class="block-content">
                        @using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)        

        <div class="control-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="controls">
                @Html.TextBoxFor(model => model.Date, new { @class = "input-datepicker" })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Slug, new { @class = "control-label col-md-2" })
            <div class="controls">
                @Html.TextBoxFor(model => model.Slug, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(model => model.Slug)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="controls">
                @Html.TextBoxFor(model => model.Title, new { @class = "input-xlarge" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Body, new { @class = "control-label col-md-2" })
            <div class="controls">
                @Html.TextAreaFor(model => model.Body, new { rows = 6, @class="textarea-editor textarea-large" })
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Season, new { @class = "control-label col-md-2" })
            <div class="controls">
                @Html.EditorFor(model => model.Season)
                @Html.ValidationMessageFor(model => model.Season)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
            <div class="controls">
                @Html.DropDownListFor(model => model.Type, new List<SelectListItem>() { new SelectListItem() { Text="Standard", Value="Standard"}})                
                @Html.ValidationMessageFor(model => model.Type)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="series">Категории</label>
            <div class="controls">
                <select id="general-chosen-multiple" name="tags" class="select-chosen" multiple>
                    @foreach (var tag in (List<Portal.Models.Tag>)ViewBag.Tags)
                    {
                        @*<option value="@tag.Id" @Html.Raw(Model.Tags.Any(t=>t.Id==tag.Id)? "selected":"")>@tag.Name</option>*@    
                        <option value="@tag.Id">@tag.Name</option>
                    }                     
                </select>                
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="attachments">Приложения</label>
            <div class="controls">
                <input type="file" name="attachments" multiple>
            </div>
        </div>

         <div class="form-actions">
            <button type="reset" class="btn btn-danger"><i class="icon-repeat"></i> Reset</button>
            <button type="submit" class="btn btn-success"><i class="icon-ok"></i> Submit</button>
        </div>

    </div>
}
                    </div>
                    <!-- END Horizontal Form Content -->
                </div>
                <!-- END Horizontal Form Block -->
</div>
