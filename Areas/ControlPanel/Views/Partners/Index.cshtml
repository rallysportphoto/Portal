@model IEnumerable<Portal.Models.Partner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ControlPanel/Views/Shared/_Admin.cshtml";
}
<!-- Page Content -->
<div id="page-content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb breadcrumb-top">
        <li>
            <a href="/"><i class="glyphicon-display"></i></a> <span class="divider"><i class="icon-angle-right"></i></span>
        </li>
        <li>
            <a href="/controlpanel">Панель управления</a> <span class="divider"><i class="icon-angle-right"></i></span>
        </li>
        <li><a href="">Партнеры</a></li>
    </ul>
    <!-- END Breadcrumb -->
    <div class="block-section">
        @Html.ActionLink("Добавить", "Create", null, new { @class="btn"})
        <table class="table">
            <thead>
                <tr>                                        
                    <th class="span3 text-center">Компания</th>
                    <th class="span3">Сайт</th>
                    <th class="span1">Глобальный</th>                                        
                    <th class="span1">Позиция сортировки</th>                                        
                    <th class="span1">Включен</th>                                        
                    <th class="span1 text-center"><i class="icon-bolt"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(p=>p.Position)) {                    
                        <tr>
                            <td class="span3 text-center">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="span3">
                                @Html.DisplayFor(modelItem => item.Url)
                            </td>
                            <td class="span1">
                                @Html.DisplayFor(modelItem => item.Global)
                            </td>        
                            <td class="span1">
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>        
                            <td class="span1">
                                @Html.DisplayFor(modelItem => item.IsEnabled)
                            </td>        
                            <td class="span1 text-center">
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" data-toggle="tooltip" title="Изменить" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" data-toggle="tooltip" title="Удалить" class="btn btn-mini btn-danger"><i class="icon-remove"></i></a>
                                </div>                                
                            </td>
                        </tr>                    
                }
            </tbody>
        </table>        
        @Html.ActionLink("Добавить", "Create", null, new { @class="btn"})
    </div>
</div>
