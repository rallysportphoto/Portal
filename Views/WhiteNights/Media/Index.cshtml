@model IEnumerable<Portal.ViewModels.GalleryViewModel>

@{
    ViewBag.Title = "Index";    
}


<section id="headline">
    <div class="container">
        <h3>Фото и видео - <small>как выглядело?</small></h3>
    </div>
</section>

<section class="container page-content" >
